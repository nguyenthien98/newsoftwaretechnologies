<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/css/trang-mua-hang.css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,400i,700,700i&amp;subset=vietnamese"
        rel="stylesheet">

    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/fontawesome/js/all.min.js"></script>
    <script src="/js/trang-mua-hang.js"></script>

    <title>Trang chủ</title>
</head>

<body>
    <div class="my-header">
        <div class="container-fluid">
            <div class="row">
                <a href="#" class="col-sm-3 logo-toy"><img src="/images/logo_toy.png" class="img-fluid" alt=""></a>
                <!-- het logo -->
                <div class="my-search col-sm-6 m-auto">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm"
                            aria-label="Recipient's username" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary btn-search" type="button"><i
                                    class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
                <!-- hết nút tìm kiếm -->
                <div class="col-sm-3 m-auto">
                    <div class="dangNhap-DangKy">
                        <i class="fas fa-user"></i>
                        <a href=""> <i><%=Account.username%></i></a>/<a href="/logins"> <i>Đăng xuất</i></a>
                        <!-- <input type="text" placeholder="<%=Account.username%>"> -->
                        <!-- hết nút đăng nhập đăng ký -->
                    </div>
                    <div class="thongTin-GioHang">
                        <i class="fas fa-shopping-cart"></i>
                        <div class="soLuong-GH">0</div>
                        <!-- hết số lượng sản phẩm trong giỏ hàng -->
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3">
                    <div class="text-center danhMuc">Danh mục</div>
                    <ul class="listDanhMuc">
                        <% for(var i = 0; i < Category.length; i ++) {%>
                        <li class="list-group-item"><a href="/users/timProducts/<%=Category[i]._id%>/<%=Account._id%>">
                                <%= Category[i].name%></a>
                        </li>
                        <%  }%>
                    </ul>
                </div>
                <!-- hết danh mục -->
                <div class="col-sm-8">
                    <nav class="navbar navbar-expand-sm navbar-light bg-light nav-content h-100">
                        <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse"
                            data-target="#collapsibleNavId" aria-controls="collapsibleNavId" aria-expanded="false"
                            aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse h-100" id="collapsibleNavId">
                            <ul class="navbar-nav mr-auto mt-2 mt-lg-0 d-flex align-items-end">
                                <li class="nav-item">
                                    <a class="nav-link trangChu"
                                        onclick="window.location='/logins/<%=Account.username%>/<%=Account.password%>'">Trang
                                        chủ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link taiKhoan"
                                        onclick="window.location='/creatUsers/info/<%=Account._id%>'">Tài khoản</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link gioHang" onclick="window.location='/carts/<%=Account._id%>'">Giỏ
                                        hàng</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link hoTro" href="#">Hỗ trợ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link khuyenMai" href="#">Khuyến mãi</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- hết header -->
    <div class="my-content">
        <div class="container-fluid">
            <div class="offset-sm-3  col-sm-8 quangCao">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="/images/kids-toy1.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/images/kids-toy2.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/images/kids-toy3.jpg" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/images/kids-toy4.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="offset-sm-3  col-sm-8 list-SanPham">
                <% for(var j = 0; j < Product.length;) {%>
                <div class="card-deck w-100 m-0 mb-4">
                    <% for(var i =0; i< 3; i++){%>
                    <% if(j < Product.length) {%>
                    <div class="card motSanPham">
                        <img class="card-img-top" style="height: 270px;" src="/images/<%= Product[j].anh%>" alt="">
                        <div class="card-body">
                            <h4 class="card-title"><%= Product[j].gia%> vnđ</h4>
                            <p class="card-text"><a href=""><%= Product[j].name%></a></p>
                        </div>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <button type="button" class="btn btn-secondary btn-GioHang"
                                onclick="window.location='/carts/<%= Product[j]._id%>/<%=Account._id%>/<%=Account.username%>/<%=Account.password%>'">Thêm
                                giỏ hàng</button>
                            <button type="button" class="btn btn-secondary btn-IconGioHang"><i
                                    class="fas fa-shopping-cart"></i></button>
                        </div>
                    </div>
                    <% }else {%>
                    <div class="card motSanPham" style="border: none">
                    </div>
                    <% } %>
                    <% j++; }%>
                </div>
                <%  }%>
            </div>

        </div>
    </div>
    <div class="footer">
        <div class="container-fluid">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="header-footer">
                            Giới thiệu về chúng tôi
                        </div>
                        <ul>
                            <li>
                                <a href=""> Về chúng tôi</a>
                            </li>
                            <li>
                                <a href="">Chính sách bán hàng</a>
                            </li>
                            <li>
                                <a href="">Hợp tác kinh doanh</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-4">
                        <div class="header-footer">
                            Thông tin trợ giúp
                        </div>
                        <ul>
                            <li>
                                <a href="">Tư vấn tiêu dùng</a>
                            </li>
                            <li>
                                <a href=""> Hỗ trợ mua hàng</a>
                            </li>
                            <li>
                                <a href="">Hình thức thanh toán</a>
                            </li>
                            <li>
                                <a href=""> Phương thức vận chuyển</a>
                            </li>
                            <li>
                                <a href=""> Chính sách trả & đổi hàng</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-4">
                        <div class="header-footer">
                            Thông tin liên hệ
                        </div>
                        <ul>
                            <li>
                                <a href="">Công ty THHH Toy Store</a>
                            </li>
                            <li>
                                <a href="">1 Võ Văn Ngân, Linh Chiểu, Thủ Đức, Hồ Chí Minh</a>
                            </li>
                            <li>
                                <a href="">Hotline:0345123456</a>
                            </li>
                            <li>
                                <a href=""> www.toystore.com</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>