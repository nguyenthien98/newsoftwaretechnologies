<body>
    <div class="my-header">
        <div class="container-fluid">
            <div class="row">
                <a href="#" class="col-sm-3 logo-toy"><img src="/images/logo_toy.png" class="img-fluid" alt=""></a>
                <!-- het logo -->
                <div class="my-search col-sm-6 m-auto">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm"
                            aria-label="Recipient's username" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary btn-search" type="button"><i
                                    class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
                <!-- hết nút tìm kiếm -->
                <div class="col-sm-3 m-auto">
                    <div class="dangNhap-DangKy">
                        <i class="fas fa-user"></i>
                        <a href=""> <i><%=Account.username%></i></a>/<a href="/logins"> <i>Đăng xuất</i></a>
                        <!-- hết nút đăng nhập đăng ký -->
                    </div>
                    <div class="thongTin-GioHang">
                        <i class="fas fa-shopping-cart"></i>
                        <div class="soLuong-GH">0</div>
                        <!-- hết số lượng sản phẩm trong giỏ hàng -->
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3">
                    <div class="text-center danhMuc">Danh mục</div>
                    <ul class="listDanhMuc">
                        <% for(var i =0; i< Category.length; i++) {%>
                        <li class="list-group-item"><a href=""><%=Category[i].name%></a></li>
                        <% }%>
                    </ul>
                </div>
                <!-- hết danh mục -->
                <div class="col-sm-8">
                    <nav class="navbar navbar-expand-sm navbar-light bg-light nav-content h-100">
                        <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse"
                            data-target="#collapsibleNavId" aria-controls="collapsibleNavId" aria-expanded="false"
                            aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse h-100" id="collapsibleNavId">
                            <ul class="navbar-nav mr-auto mt-2 mt-lg-0 d-flex align-items-end">
                                <li class="nav-item">
                                    <a class="nav-link trangChu" onclick="window.location='/logins/<%=Account.username%>/<%=Account.password%>'">Trang chủ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link taiKhoan" href="#">Tài khoản</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link gioHang" onclick="window.location='/carts/<%=Account._id%>'">Giỏ hàng</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link hoTro" href="#">Hỗ trợ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link khuyenMai" href="#">Khuyến mãi</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- hết header -->
    <div class="my-content">
        <div class="offset-sm-3  col-sm-8 list-SanPham">
            <div class="noiDungGioHang">
                <h3>Quản lý tài khoản</h3>
                <div class="row d-flex justify-content-between">
                    <div class="col-sm-5 thongTinCaNhan">
                        <div class="row">
                            <h4><b>Thông tin cá nhân</b> </h4>
                            <a href="/creatUsers/getUser/<%=Account._id%>" class="chinhSua">Chỉnh sửa</a>
                        </div>
                        <div class="ten"><b>Tên:</b><%= User.ten%></div>
                        <div class="gioiTinh"><b>Giới tính:</b><%= User.gioitinh%></div>
                        <div class="email"><b>Email:</b> <%= Account.email%> </div>
                        <div class="ngaySinh"><b>Ngày sinh:</b> <%= User.ngaysinh%></div>
                    </div>
                    <div class="col-sm-5 thongTinDiaChi">
                        <div class="row">
